<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/localvideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_video" />
    
    <Button
        android:id="@+id/localvideo_setsurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_video_setsurface" />

    <Button
        android:id="@+id/streamvideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stream_video" />

    <Button
        android:id="@+id/localaudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_audio" />
